@{
    ViewData["Title"] = "KM Library";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript" src="~/js/pages/login.js"></script>

<input id="hiddenlogin" type="hidden" value=@ViewBag.hiddenLogin />

<div class="loginbanner" style="margin-top:150px">
    <div class="row text-lg-start mb-lg-5 align-items-center">
        <div class="col-lg-5">
            <img class="card-img-left example-card-img-responsive" src="~/Assets/img/header-bg.jpg" style="width:100%" />
        </div>
        <div class="col-lg-6">
            <div class="row align-items-stretch mb-5 ">
                <div class="col-lg-8 offset-2">
                    <div class="text-start">
                        <h2 class="section-heading text-uppercase">Login</h2>
                    </div>
                    <br /><br />
                    <form id="loginForm" class="needs-validation">
                        <div class="form-group">
                            Email:
                            <input class="form-control" id="email" type="email" placeholder="Your Work Email *" required />
                            <div class="invalid-feedback">Please provide a valid Email.</div>
                        </div>
                        @*
                        <div class="form-group">
                        Password:
                        <input class="form-control" id="password" type="password" placeholder="Your Password *" required />
                        <div class="invalid-feedback">Please provide a valid Email.</div>
                        </div>
                        *@
                        <br />

                        <div id="loginError" style="display:none" class="alert alert-danger" role="alert">
                            Please login with the email you registered with. Have any questions? Please email our team: <a href="mailto:clinical.services@healthtrustpg.com?subject=HealthTrust Knowledge Insight Portal">clinical.services@healthtrustpg.com </a>
                        </div>

                        <br /><br />

                        <div class="text-start">
                            <button class="btn btn-primary btn-xl text-uppercase" onclick="Login(event)">
                                Login
                            </button>
                        </div>

                        <div class="text-start mt-5">
                            <span>Don’t have an account? @Html.ActionLink("Request Access", "SignUp", "Accounts", new { }, new { @class = "" }) </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
